{
  "name": "phantom-buster",
  "type": "module",
  "version": "0.0.0",
  "main": "./dist/main.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "tsc && vite build",
