    "@types/node": "^20.14.9",
    "@vitest/coverage-v8": "^1.6.0",
    "eslint": "^9.6.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "rollup-plugin-banner2": "^1.3.0",
    "typescript": "^5.5.3",
    "vite": "^5.3.2",
    "vitest": "^1.6.0"
  },
  "lint-staged": {
    "*.ts": "pnpm run lint"
  },
  "phantomBuster": {
    "image": "web-node:v3",
